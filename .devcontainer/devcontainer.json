{
  "name": "base",
  "build": {
    "dockerfile": "base/Dockerfile", 
    "context": ".."
  },

  "workspaceMount": "source=${localWorkspaceFolder},target=/home/devcontainer/workspace,type=bind",
  "workspaceFolder": "/home/devcontainer/workspace",

  "mounts": [
    "type=bind,source=${localEnv:SSH_AUTH_SOCK},target=/ssh-agent",
    "type=bind,source=/home/${localEnv:USER}/.ssh,target=/home/devcontainer/.ssh,readonly=true"
  ],

  "remoteUser": "devcontainer",
  "remoteEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent"
  },

  "overrideCommand": true,
  "postCreateCommand": "/bin/bash .devcontainer/res/post_create_command.bash",

  "customizations": {
    "vscode": {
      "extensions": [
        "skellock.just",
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.autopep8",
        "tamasfe.even-better-toml",
        "VisualStudioExptTeam.vscodeintellicode"
      ]
    }
  }
}
